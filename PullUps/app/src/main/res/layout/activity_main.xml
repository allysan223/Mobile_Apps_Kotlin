<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uw.eep523.pullups.MainActivity">




    <TextView
        android:id="@+id/tv_modeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode: "
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake to begin!"
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"/>



    <TextView
        android:id="@+id/tv_counterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Pull Up Counter"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tv_numPullUps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50sp" />

    <Button
        android:id="@+id/b_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#F44336"
        android:text="Stop"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        tools:visibility="invisible" />

</LinearLayout>